# Local development environment variables
# Use this file when running services locally (outside Docker)
# Copy this to .env when developing locally

# Application Settings
APP_NAME="RepoInsight"
DEBUG=true
ENVIRONMENT="development"
API_V1_STR="/api/v1"
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# Service Ports
API_PORT=8000
WORKER_CONCURRENCY=2

# PostgreSQL Database
POSTGRES_USER="user"
POSTGRES_PASSWORD="password"
POSTGRES_DB="repoinsight"
POSTGRES_HOST="localhost"
POSTGRES_PORT=5432
DATABASE_URL="postgresql://user:password@localhost:5432/repoinsight"

# Redis Message Queue
REDIS_HOST="localhost"
REDIS_PORT=6380
REDIS_URL="redis://localhost:6380/0"
CELERY_BROKER_URL="redis://localhost:6380/0"
CELERY_RESULT_BACKEND="redis://localhost:6380/0"

# ChromaDB Vector Database (for local development)
# Connect to Docker ChromaDB from local worker
CHROMADB_HOST="localhost"
CHROMADB_PORT=8001
# CHROMADB_PERSISTENT_PATH="./chroma_data"

# LLM and Embedding API Keys
# OPENAI_API_KEY="your_openai_api_key_here"
# GOOGLE_API_KEY="your_google_api_key_here"
# AZURE_OPENAI_API_KEY="your_azure_openai_api_key_here"
# AZURE_OPENAI_ENDPOINT="your_azure_openai_endpoint_here"
# HUGGINGFACE_HUB_API_TOKEN="your_huggingface_token_here"
QWEN_API_KEY="sk-b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8"
DASHSCOPE_API_KEY="sk-b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8b8"
# ANTHROPIC_API_KEY="your_anthropic_api_key_here"
# COHERE_API_KEY="your_cohere_api_key_here"
# MISTRAL_API_KEY="your_mistral_api_key_here"

# Git Configuration
GIT_CLONE_TIMEOUT=300
GIT_CLONE_DEPTH=1

# Indexing and Embedding Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
MAX_CONCURRENT_EMBEDDINGS=5
EMBEDDING_BATCH_SIZE=100

# File Processing Configuration
ALLOWED_FILE_EXTENSIONS=[".py", ".js", ".ts", ".jsx", ".tsx", ".java", ".cpp", ".c", ".h", ".cs", ".php", ".rb", ".go", ".rs", ".swift", ".kt", ".scala", ".r", ".m", ".sh", ".bat", ".ps1", ".sql", ".html", ".css", ".scss", ".less", ".xml", ".json", ".yaml", ".yml", ".toml", ".ini", ".cfg", ".conf", ".md", ".rst", ".txt", ".dockerfile", ".makefile", ".cmake", ".gradle", ".maven"]
EXCLUDED_DIRECTORIES=[".git", ".svn", ".hg", "node_modules", "__pycache__", ".pytest_cache", ".mypy_cache", "venv", "env", ".env", "dist", "build", "target", "bin", "obj", ".idea", ".vscode", ".vs", "*.egg-info", ".tox", ".coverage", "htmlcov", ".nyc_output", "coverage", ".sass-cache", ".cache", "tmp", "temp", "logs", "*.log"]